<% include ../partials/header %>

<div class='container'> 
    <div class='row'>
        <h1 style='text-align: center;'>Add new camp ground!</h1>
        <div style='width:30%; margin: 25px auto;'>
            <form action='/campground' method='POST'>
                <div class='form-group'>
                    <input class='form-control' placeholder='New camp name' name='name' type='text'>
                </div>
                <div class='form-group'>
                    <input class='form-control' placeholder='Image URL' name='image' type='text'>
                </div>
                <div class='form-group'>
                    <input class='form-control' placeholder='Description' name='description' type='text'>
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Add New Camp Ground</button>
                </div>
            </form>
            <p>
                <a class='btn btn-primary btn-sm' href='/campground'>Go back</a>
            </p>
        </div>
    </div>
</div>

<% include ../partials/footer %>