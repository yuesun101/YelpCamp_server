<% include ../partials/header %>

<div class='container'> 
    <div class='row'>
        <h1 style='text-align: center;'>Edit <%= campground.name %></h1>
        <div style='width:30%; margin: 25px auto;'>
            <form action='/campground/<%= campground._id %>?_method=put' method='POST'>
                <div class='form-group'>
                    <input class='form-control' value='<%= campground.name %>' name='campground[name]' type='text'>
                </div>
                <div class='form-group'>
                    <input class='form-control' value='<%= campground.image %>' name='campground[image]' type='text'>
                </div>
                <div class='form-group'>
                    <input class='form-control' value='<%= campground.description %>' name='campground[description]' type='text'>
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
                </div>
            </form>
            <p>
                <a class='btn btn-primary btn-sm' href='/campground'>Go back</a>
            </p>
        </div>
    </div>
</div>

<% include ../partials/footer %>