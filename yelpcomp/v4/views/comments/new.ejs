<% include ../partials/header %>

<div class='container'> 
    <div class='row'>
        <h1 style='text-align: center;'>Add New Comment To <%= campground['name']%></h1>
        <div style='width:30%; margin: 25px auto;'>
            <form action='/campground/<%= campground._id%>/comments' method='POST'>
                <div class='form-group'>
                    <input class='form-control' placeholder='text' name='comment[text]' type='text'>
                </div>
                <div class='form-group'>
                    <input class='form-control' placeholder='author' name='comment[author]' type='text'>
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Submit</button>
                </div>
            </form>
            <p>
                <a class='btn btn-primary btn-sm' href='/campground'>Go back</a>
            </p>
        </div>
    </div>
</div>

<% include ../partials/footer %>